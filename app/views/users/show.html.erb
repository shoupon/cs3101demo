<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Traveler' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
  <dd><%= @user.nickname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar) %>:</strong></dt>
  <dd><%= image_tag @user.avatar_url(:thumb) %></dd>
</dl>

<div class="form-actions">
    <% if allow(@user) %>
      <%= link_to t('.edit', :default => "Edit my profile"),
                  edit_user_path(@user), :class => 'btn' %>
    <% end %>
</div>
<p id="notice"><%= notice %></p>

<h5><%= @user.name + "'s trips" %></h5>
<%= render 'trips/list' %>
