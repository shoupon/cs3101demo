<h1>New trip</h1>

<%= form_for @trip, :html => {:multipart => true} do |f| %>

  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_select :end %>
  </div>
  <div class="field">
    <%= f.file_field :photo %><br>
  </div>

  <%= file_field_tag('trip_photos_attributes_file', multiple: true, name: "trip[photos][][file]") %> 

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', trips_path %>