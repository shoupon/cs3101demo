<h1>New trip</h1>

<%= form_for [@user,@trip], :html => {:multipart => true} do |f| %>

  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_field :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_field :end %>
  </div>

  <%= render 'uploader' %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', user_trips_path(@user) %>
